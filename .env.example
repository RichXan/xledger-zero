# JWT 密钥（必须修改！至少 32 字符）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-32chars

# JWT 过期时间（秒）
JWT_ACCESS_EXPIRE=7200       # 2 小时
JWT_REFRESH_EXPIRE=604800    # 7 天

# 数据库密码（必须修改！至少 16 字符）
DB_PASSWORD=your-strong-database-password-change-this

# Redis 连接配置
REDIS_HOST=localhost:16379
REDIS_PASSWORD=your-strong-redis-password-change-this
REDIS_DB=0

# ========================================
# 可选配置
# ========================================

# 时区
TZ=Asia/Shanghai

# 日志级别
LOG_LEVEL=info
